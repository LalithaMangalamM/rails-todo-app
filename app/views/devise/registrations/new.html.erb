<br/>
<div class="container">
  <div class="form-container"style = "max-width: 50%; padding: 2%;">
    <div class="form-content">
      <h2 class="title">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form', novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', class: 'input' %>
        </div>
        <br>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'input' %>
        </div>
        <br>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'input' %>
        </div>
<br>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'input' %>
        </div>
<br>
        <div class="form-group">
          <%= f.submit "Sign Up", class: 'button', style: "background-color: #42647D; color: white;" %>
        </div>
        <p>or Already have an account?</p>
                <div class="form-group">
          <%= link_to "Login", new_user_session_path, class: 'button', style:"background-color: #42647D; color: white;align-self-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
