<br/><br/>
<div class="container py-5">
  <div class="bg-white rounded shadow-sm p-4">
    <div class="row align-items-stretch g-0">
      <!-- Form Column -->
      <div class="col-12 col-md-7 d-flex align-items-center">
        <div class="p-4 bg-white rounded flex-fill mx-auto">
          <h2 class="mb-4 text-center">Log In</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation p-4', novalidate: true }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.submit "Log In", class: 'btn btn-primary w-100' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>

      <!-- Image Column with Overlay (Optional) -->
      <div class="col-12 col-md-5 d-flex position-relative overflow-hidden">
        <%= image_tag('pictures/road.jpeg', class: 'img-fluid w-100 h-100', style: 'object-fit: cover;') %>
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center text-center text-white" style="background: rgba(0, 0, 0, 0.5);">
          <h3 class="display-6">Welcome Back!</h3>
          <p class="lead">Log in to manage your tasks</p>
        </div>
      </div>
    </div>
  </div>
</div>
