<div class="container mt-5">
  <%= form_with(model: task, local: true, html: { class: "form-horizontal" }) do |form| %>
    <% if task.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
  
      <div class="col-sm-9">
        <%= form.text_field :task_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :description, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :dead_line, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.datetime_field :dead_line, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :status, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="statusDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= task.status.humanize %>
          </button>
          <div class="dropdown-menu" aria-labelledby="statusDropdown">
            <a class="dropdown-item <%= 'active' if task.status == 'pending' %>" href="#" data-value="pending">Pending</a>
            <a class="dropdown-item <%= 'active' if task.status == 'missed' %>" href="#" data-value="missed">Missed</a>
            <a class="dropdown-item <%= 'active' if task.status == 'completed' %>" href="#" data-value="completed">Completed</a>
          </div>
        </div>
        <%= form.hidden_field :status, id: "statusField", value: task.status %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= form.submit "Save Changes", class: "btn btn-primary" %>
        <%= link_to 'Back', tasks_path, class: "btn btn-secondary ml-2" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.dropdown-item').forEach(function(item) {
      item.addEventListener('click', function(e) {
        e.preventDefault();
        var value = this.getAttribute('data-value');
        var button = document.getElementById('statusDropdown');
        var hiddenField = document.getElementById('statusField');
        
        button.textContent = this.textContent;
        hiddenField.value = value;
      });
    });
  });
</script>
